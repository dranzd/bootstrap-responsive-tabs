{
	"env" : {
		"node"    : true,
		"browser" : true,
		"amd"     : true,
		"mocha"   : true
	},

	"rules": {

		// Best Practices
		"complexity"            : [ 1, 10 ],
		"consistent-return"     : 1,
		"curly"                 : 1,
		"dot-notation"          : 1,
		"eqeqeq"                : 1,
		"no-else-return"        : 1,
		"no-eq-null"            : 1,
		"no-eval"               : 1,
		"no-extend-native"      : 1,
		"no-floating-decimal"   : 1,
		"no-implied-eval"       : 1,
		"no-labels"             : 1,
		"no-lone-blocks"        : 1,
		"no-loop-func"          : 1,
		"no-native-reassign"    : 1,
		"no-new"                : 1,
		"no-new-func"           : 1,
		"no-proto"              : 1,
		"no-redeclare"          : 1,
		"no-return-assign"      : 1,
		"no-script-url"         : 1,
		"no-self-compare"       : 1,
		"no-unused-expressions" : 1,
		"no-with"               : 1,
		"no-yoda"               : 1,

		// Strict Mode
		"no-extra-strict" : 1,
		"strict"          : 1,

		// Variables
		"no-catch-shadow"            : 1,
		"no-shadow"                  : 1,
		"no-shadow-restricted-names" : 1,
		"no-undef"                   : 1,
		"no-undef-init"              : 1,
		"no-unused-vars"             : 0,
		"no-use-before-define"       : 1,

		// Node.js
		"handle-callback-err" : 1,
		"no-mixed-requires"   : 1,
		"no-path-concat"      : 1,
		"no-process-exit"     : 1,

		// Stylistic Issues
		"brace-style"             : 1,
		"camelcase"               : 1,
		"consistent-this"         : [ 0, "self" ],
		"func-names"              : 1,
		"new-cap"                 : 1,
		"new-parens"              : 1,
		"no-nested-ternary"       : 1,
		"no-array-constructor"    : 1,
		"no-new-object"           : 1,
		"no-spaced-func"          : 1,
		"no-space-before-semi"    : 1,
		"no-ternary"              : 1,
		"no-underscore-dangle"    : 1,
		"no-wrap-func"            : 1,
		"quotes"                  : [ 2, "single", "avoid-escape" ],
		"quote-props"             : 1,
		"semi"                    : 1,
		"space-in-brackets"       : [ 1, "always" ],
		"space-infix-ops"         : 1,
		"space-return-throw-case" : 1,
		"space-unary-word-ops"    : 1,
		"max-nested-callbacks"    : [ 1, 4 ],
		"one-var"                 : 0
	}
}
